{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"declarationDir": "dist",
		"declaration": true,
		"rootDir": ".",
		"target": "es6",
		"watch": false,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictNullChecks": false,
		"lib": [
			"es2020"
		],
		"types": [
			"jest",
			"node"
		],
		"typeRoots": [
			"../node_modules/@types",
			"node_modules/@types"
		],
		"paths": {}
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts",
	],
	"exclude": [
		"**/coverage/**",
		"**/dist/**",
		"**/node_modules/**"
	]
}
